        <nav class="chat-menu chat-effect-11" id="menu-11">
                  <form action="{{ path('login_check') }}" method="post" class="col-lg-10 col-lg-offset-1 js-form-registration">
                        <h3 class="text-white">
                            Sign in account
                        </h3>
                        <p class="text-white">
                          Complete fields bellow
                        </p>
                        <div class="form-group">
                           <input type="text" name="_username" class="form-control" placeholder="Username" required="required" value="{{ last_username|default('') }}" />
                        </div>
                        <div class="form-group">
                           <input type="password" name="_password" class="form-control" placeholder="Password" required="required" />
                        </div>
                        <div class="form-group">
                           <button type="submit" class="btn btn-block btn-chatapp">Sign in</button>
                        </div>
                        <div class="form-group">
                           <p class="text-white">Don't have an account? <a href="{{ path('register') }}" class="js-toggle-signup">Register</a></p>
                        </div>
                   </form>
        </nav>
        <!-- content push wrapper -->
        <div class="chat-pusher">
            <div class="chat-content orange"><!-- this is the wrapper for the content -->
                <div class="chat-content-inner"><!-- extra div for emulating position:fixed of the menu -->
