{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ app.request.basepath }}/css/component.css" rel="stylesheet" type="text/css" media="screen" />
    <link href="{{ app.request.basepath }}/css/demo.css" rel="stylesheet" type="text/css" media="screen" />
{% endblock %}

{% block javascripts %}
    <script>var is_home_page = true, is_radar = false, is_radar_page=false;</script>
    {{ parent() }}
    <script src="{{ app.request.basepath }}/js/classie.js"></script>
    <script src="{{ app.request.basepath }}/js/sidebarEffects.js"></script>
    <script src="{{ app.request.basepath }}/js/jquery.imagesloaded.js"></script>
    <script src="{{ app.request.basepath }}/js/jquery.wookmark.min.js"></script>
    <script src="{{ app.request.basepath }}/js/apis.js"></script>
{% endblock %}

