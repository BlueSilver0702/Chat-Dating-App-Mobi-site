                        </div>
                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1" style="margin-top:10px">
                          <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Download the App</a>
                              <ul class="dropdown-menu">
                                <li><a class="download-btn applestore" href="https://itunes.apple.com/us/app/chatapp-meet-share-socialize/id767196673?mt=8" target="_blank" title="App Store"></a></li>
                                <li><a class="download-btn googleplay" href="https://play.google.com/store/apps/details?id=com.guiang.chatapp&hl=en" target="_blank" title="Google Play"></a></li>
                                <li><a class="download-btn androidmarket" href="http://www.amazon.com/Guiang-Inc-ChatApp/dp/B00H1O4UCW/ref=sr_1_2?ie=UTF8&qid=1387580253&sr=8-2&keywords=chatapp" target="_blank" title="Android Market"></a></li>
                              </ul>
                            </li>
                            <li><a href="{{ path('register') }}">Sign Up</a></li>
                          </ul>
                        </div><!-- /.navbar-collapse -->
                      </div><!-- /.container-fluid -->
                    </nav>
                    <div class="container">
                      <div class="row" >
                            <div class="jumbotron day">
                                <div class="row" >
                                    <div class="col-lg-6 text-white" >
                                      <h1 class="big on text-center animated fadeInRight delay1s">They met on</h1>
                                      <img class="img-responsive brand on animated fadeInRight delay1s" src="{{ app.request.basepath }}/images/logohdflat.png" / >
                                      <div class="col-lg-12 text-center animated fadeInRight delay2s" style="background-color:rgba(34,34,34,0.5);padding:10px;border-radius:8px" >
                                          <h3 ><em><strong>Meet</strong></em> new people around your location</h3>
                                          <h3 ><em><strong>Chat</strong></em> with those who share your interests</h3>
                                          <h3 ><em><strong>Share</strong></em> moments with your friends</h3>
                                      </div>
                                      <div class="col-lg-12 animated fadeInRight delay3s" >
                                        <a class="btn btn-chatapp btn-block on btn-lg brand chat-trigger" data-effect="chat-effect-11" role="button">Sign In</a>
                                      </div>
                                    </div>
                                    <div class="col-lg-6" >
                                        <div class="marketing-device animated fadeInUp rotateInUpLeft delay3s">
                                            <div class="iphone5">
                                                <div class="fixed-video-block">
                                                    <a href="#" data-toggle="modal" data-target="#videoModal">
                                                        <div class="banner-mask">
                                                            <span class="video-banner-more"></span>
                                                            <img src="{{ app.request.basepath }}/images/slide-anim.jpg" alt="ChatApp Mobile App" />
                                                        </div>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <ul id="tiles">
                           <!-- These is where we place content loaded from the Wookmark API -->
                        </ul>
                        <div id="loader">
                            <div id="loaderCircle" align="center" style="text-align:center;"><img src="{{ app.request.basepath }}/images/ajax-loader.gif" / ></div>
                          </div>
                    </div><!-- /row -->
                  </div><!-- /container -->
                </div><!-- /chat-content-inner -->
            </div><!-- /chat-content -->
        </div><!-- /chat-pusher -->
    </div><!-- /chat-container -->
