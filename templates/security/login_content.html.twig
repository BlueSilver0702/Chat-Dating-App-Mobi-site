<form action="{{ path('login_check') }}" id="form-login" method="post">
    <div class="input-group">
        <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
        <input type="text" name="_username" class="form-control input-lg" placeholder="Username" required="required" value="{{ last_username|default('') }}" />
    </div>
    <div class="input-group">
        <span class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></span>
        <input type="password" name="_password" class="form-control input-lg" placeholder="Password" required="required" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-block btn-primary btn-lg">Login</button>
    </div>
    <div class="form-group">
        <p>Don't have an account? <a href="{{ path('register') }}" class="js-toggle-signup">Register</a></p>
    </div>
</form>
