<!DOCTYPE html>
<html>
    <head>
        <title>ChatApp - {% block title 'Chat and meet new people' %}</title>

        <meta charset="utf-8" />
        <meta name="description" content="Be Friendly On ChatApp, Social App for your Andriod and iOS devices.">
        <meta name="keywords" content="ChatApp, Social App">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0" />

        <link rel="shortcut icon" href="{{ app.request.basepath }}/favicon.ico">

        {% block stylesheets %}
            <link href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet" />

            <link rel="stylesheet" href="{{ app.request.basepath }}/external/fontello/css/fontello.css" />
            <link rel="stylesheet" href="{{ app.request.basepath }}/external/fontello/css/animation.css" />
            <!--[if IE 7]>
                <link rel="stylesheet" href="{{ app.request.basepath }}/external/fontello/css/fontello-ie7.css" />
            <![endif]-->

            <link href="{{ app.request.basepath }}/css/style.css" rel="stylesheet" type="text/css" media="screen" />
            <link href="{{ app.request.basepath }}/css/print.css" rel="stylesheet" type="text/css" media="print" />
        {% endblock %}

        <script type="text/javascript">
        {% spaceless %}
            {% if app.user %}
                var ChatApp = {
                    baseUrl: "{{ app.request.baseUrl }}",
                    userUsername: "{{ app.user.username }}",
                    userToken: "{{ app.user.token }}"
                };
            {% endif %}
        {% endspaceless %}
        </script>

        <script type="text/javascript">
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-46311862-1', 'auto');
            ga('send', 'pageview');
        </script>
    </head>
    <body class="{% if is_granted('ROLE_USER') %}loggedin{% else %}loggedout{% endif %} {{ app.request.get('_route') }} {% if errorCode is defined %}error404{% endif %}">

        {% block header %}{% endblock %}
        {% block content %}{% endblock %}

        {% block foolter %}
            <footer class="clearfix">
                <div class="content">
                    <ul>
                        <li><a href="http://guiang.com/" target="_blank">About Us</a></li>
                        <li><a href="http://guiang.com/contact" target="_blank">Contact Us</a></li>
                        <li><a href="https://testflightapp.com/join/09bd7058e7c6d2c55a38e783824f50fa-MTg0ODk5/" target="_blank">Beta Test</a></li>
                        <li><a href="https://facebook.com/TheChatApp" target="_blank" class="sprites-facebook">Facebook</a></li>
                        <li><a href="https://twitter.com/TheChatApp" target="_blank" class="sprites-twitter">Twitter</a></li>
                    </ul>
                    <p>&copy; 2014 Guiang Corporation</p>
                </div>
            </footer>
        {% endblock %}

        <a class="scroll-to-top" href="#top"><i class="icon icon-arrow-up"></i></a>

        {% block javascripts %}
            <!--[if lte IE 8]>
                <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
            <![endif]-->

            <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
            <script src="//cdnjs.cloudflare.com/ajax/libs/waypoints/2.0.3/waypoints.min.js"></script>
            <script src="//cdnjs.cloudflare.com/ajax/libs/masonry/3.1.2/masonry.pkgd.min.js"></script>
            <script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.1.1/js/bootstrap.min.js"></script>

            <script src="{{ app.request.basepath }}/js/jquery.infieldlabel.min.js"></script>
            <script src="{{ app.request.basepath }}/js/view.min.js?auto"></script>
            <script src="{{ app.request.basepath }}/js/main.js"></script>
        {% endblock %}
    </body>
</html>
